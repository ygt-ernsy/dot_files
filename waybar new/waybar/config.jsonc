{
    "modules-left": ["hyprland/workspaces", "hyprland/mode"],
    "modules-center": ["clock", "idle_inhibitor"],
    "modules-right": ["tray","battery","power-profiles-daemon" ,"pulseaudio", "custom/power"],

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "power-profiles-daemon":{
	"format": "{icon}",
	"toolltip-format": "Power profile: {profile}\nDriver: {driver}",
	"tooltip": true,
	"format-icons":{
	  "default": " ",
	  "performance": " ",
	  "balaced": " ",
	  "power-saver": "  "
}, 	

    "battery": {
	"bat": "BAT2",
	"interval": 60,
	"states": {
		"warning": 30,
		"critical": 15
	},
	"format": "{capacity}% {icon}",
	"format-icons": [" ", " ", " ", " ", " "],
	"max-length": 25
},

},

    "network": {
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "{ifname} ",
        "format-disconnected": "", 
        "max-length": 50,
        "on-click": "kitty -e 'nmtui'"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
    },
    "tray": {
        "icon-size": 15,
        "spacing": 10
    },
    "clock": {
        // "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        // "format-alt": "{:%Y-%m-%d}"
	//	"on-click": "merkuro-calendar"
    },
    "pulseaudio": {
        "format": "{volume}% {icon} ",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": "0% {icon} ",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
	"custom/power": {
		"format": " ",
		"tooltip": true,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml" , 
		"menu-actions": {
			"shutdown": "shutdown now",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
			}
	}
			
}
	
